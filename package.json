{
  "name": "@specmanager/mcp-server",
  "version": "1.0.0",
  "description": "Task execution MCP server - connects to specmanager.ai",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "specmanager-mcp": "dist/index.js",
    "specmanager-mcp-http": "dist/index-http.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/index-http.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/index-http.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "specmanager",
    "claude",
    "ai",
    "task-execution"
  ],
  "author": "SpecManager",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/specmanager/mcp-server"
  },
  "homepage": "https://specmanager.ai",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.18.1",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
